{
    "name": "elmozza.com",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare",
        "d1:local": "wrangler d1 execute elmozza-db --local --file=./schema.sql",
        "d1:remote": "wrangler d1 execute elmozza-db --remote --file=./schema.sql",
        "d1:dev": "npm run d1:local",
        "d1:push": "npm run d1:remote"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20260103.0",
        "@sveltejs/adapter-cloudflare": "^7.2.4",
        "@sveltejs/kit": "^2.49.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "daisyui": "^5.5.14",
        "svelte": "^5.45.6",
        "svelte-check": "^4.3.4",
        "typescript": "^5.9.3",
        "vite": "^7.2.6",
        "wrangler": "^4.57.0"
    }
}
